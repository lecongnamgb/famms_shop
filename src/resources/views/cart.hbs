<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh Toán</title>
</head>
<body>
    {{>nav}}
    <div class="cart">
        <div class="cart-body mx-auto">
            <div class="row">
                <div class="col-md-7 billing">
                    <div class="billing-information mx-auto">
                        <div class="billing-header">
                            <div class="billing-title title">
                                Thông tin thanh toán
                            </div>
                        </div>
                        <div class="billing-body">
                            <div class="basic-info row">
                                <div class="col-md-6">
                                    <input type="text" class="billing-input" placeholder="Họ và tên" value = "{{user_information.name}}" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="billing-input" placeholder="Số điện thoại" value = "{{user_information.phone_number}}" required>
                                </div>
                            </div>
                            <input type="text" class="billing-input" placeholder="Gmail" value = "{{user_information.email}}" required>
                            <input type="text" class="billing-input" placeholder="Địa chỉ" value = "{{user_information.address}}" required>
                            <div class="billing-address row">
                                <div class="col-md-4">
                                     <input type="text" class="billing-input" placeholder="Tỉnh/Thành Phố" required>
                                </div>
                                <div class="col-md-4">
                                     <input type="text" class="billing-input" placeholder="Quận/Huyện" required>
                                </div>
                                <div class="col-md-4">
                                     <input type="text" class="billing-input" placeholder="Xã/Phường" required>
                                </div>
                            </div>
                            <input type="text" class = "billing-input" placeholder="Ghi chú thêm (VD: Trong giờ hành chính)">
                            <div class="payment-methods">
                                <div class = "title">
                                    Hình thức thanh toán
                                </div>
                                <div class="payment-method">
                                    <div class = "method-item">
                                        <label class="payment-method-body">
                                            <div class = "paymentMethod-body">
                                                <input type="radio" name="payment-method" class = "radio-input"/>
                                                <span class = "method-img"> 
                                                    <img src="img/momo-icon.png" alt="" class = "icon-payments"/>
                                                </span>
                                                <div class = "method-description">
                                                    <p>MOMO</p>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="payment-method">
                                    <div class = "method-item">
                                        <label class="payment-method-body">
                                            <div class = "paymentMethod-body">
                                                <input type="radio" name="payment-method" class = "radio-input" required/>
                                                <span class = "method-img"> 
                                                    <img src="img/delivery.png" alt="" class = "icon-payments".>
                                                </span>
                                                <div class = "method-description">
                                                    <p>COD</p>
                                                    <p>Thanh toán khi nhận hàng</p>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="payment-method">
                                    <div class = "method-item">
                                        <label class="payment-method-body" name = "payment-method">
                                            <div class = "paymentMethod-body">
                                                <input type="radio" name="payment-method" class = "radio-input"/>
                                                <span class = "method-img"> 
                                                    <img src="img/zalopay-icon.png" alt="" class = "icon-payments"/>
                                                </span>
                                                <div class = "method-description">
                                                    <p>ZaloPay</p>
                                                    <p>Thẻ ATM / Internet Banking</p>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button class = 'payment-button'>Thanh Toán</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="payment-price">
                        <div class="cart-title title">
                            Giỏ hàng
                        </div>
                        <div class = "cart-products">
                            {{#cart.products}}
                            <div class = "cart-product d-flex">
                                <img src="{{this.main_img}}" alt="">
                                <div class = "product-quantity">
                                    {{this.quantity_order}}
                                </div>
                                <div class="product-information">
                                    <div class="product-title fw-bold">
                                        {{this.name}}
                                    </div>
                                    <div class="product-colorAndSize">
                                        {{this.color}}/{{this.size}}
                                    </div>
                                </div>
                                <div class = "remove-product">
                                    <a href="cart/remove/{{this._id}}"><i class="fas fa-times"></i></a>
                                </div>
                                <div class="price-product">
                                    <p class = "priceProduct">{{this.price}}.000đ</p>
                                </div>
                            </div>
                            {{/cart.products}}
                        </div>
                        <hr>
                        <div class = "price-product-count">
                            <div class = "price-count">
                                <p class = "float-start">Tạm tính</p>
                                <p class = "float-end product-fee"></p>
                            </div>
                            <br>
                            <div class = "price-count">
                                <p class = "float-start">Giảm giá</p>
                                <p class = "float-end product-discount"></p>
                            </div>
                            <br>
                            <div class = "price-count">
                                <p class = "float-start">Phí giao hàng</p>
                                <p class = "float-end ship-fee"></p>
                            </div>
                            <br>
                            <hr>
                            <div>
                                <p class = "float-start">Tổng</p>
                                <p class = "float-end total-fee"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
</body>
</html>